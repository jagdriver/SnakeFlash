    gecos: "Wavesnake Manager"
    sudo: ALL=(ALL) NOPASSWD:ALL
    shell: /bin/bash
    groups: users,docker,video,input
    plain_text_passwd: wavesnake
    #passwd: 34606lkFOYhhCGZiVmaOiZxSrpcvun.YOgyWuin0l0/aHRkep9sHrMTVp4uzHsAkTIJ.q3c8RuTA.NUNE8yqrh72O5/
    lock_passwd: false
    ssh_authorized_keys:
      - ssh-rsa  nielsjorgennielsen@snakemacpro.local
