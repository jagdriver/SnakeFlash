  #- 'sudo ip route delete default via 172.16.1.1'
  #- 'sudo ip route delete default via 192.168.1.1'
  #- 'sudo ip route add default via 192.168.1.236'

  - 'sudo ip route del 0/0'
  - 'sudo ip route add default via 192.168.1.1 dev wlan0 src 192.168.1.236 metric 100'
  
  # Directories for NFS
